{
    "elements": [
        {
            "type": "ValidationTextBox",
            "name": "Email",
            "caption": "Email"
        },
        {
            "type": "ValidationTextBox",
            "name": "AuthCode",
            "caption": "Auth Code"
        }
    ],
    "actions": [
        {
            "type": "Button",
            "label": "Request Code",
            "onClick": "IPS_RequestAction($id, 'RequestCode', '');"
        },
        {
            "type": "Button",
            "label": "Exchange Auth Code",
            "onClick": "IPS_RequestAction($id, 'ExchangeAuthCode', $AuthCode);"
        },
        {
            "type": "Button",
            "label": "Refresh Token",
            "onClick": "IPS_RequestAction($id, 'RefreshToken', '');"
        }
    ]
}
